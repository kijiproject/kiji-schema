# This script allows developers to run the kiji script in the development
# distribution built under the project's target directory. If no built
# development distribution exists, maven will be used to build one.

set -o nounset
set -o errexit
[[ ! -z "${DEBUG:-}" ]] && set -x

bin="$(dirname $0)"

release_dir="$(ls -d -1 "${bin}"/../kiji-schema/target/kiji-*-release/kiji-*/ | sort -r | head -1)"
if [[ ! -d "${release_dir}" ]]; then
  echo "No target/ directory found. Building KijiSchema with 'mvn install'..."
  mvn install -DskipTests -DskipVerify
  release_dir="$(ls -d -1 "${bin}"/../kiji-schema/target/kiji-*-release/kiji-*/ | sort -r | head -1)"
fi
release="$(cd "${release_dir}" && pwd -P)"

# If $KIJI_HOME is set to the development base, retarget it to the actual release dir.
if [[ ! -z "${KIJI_HOME:-}" ]]; then
  canonical_kiji_home=`cd ${KIJI_HOME} && pwd`
  canonical_parent=`cd ${bin}/../ && pwd`

  if [[ "${canonical_kiji_home}" == "${canonical_parent}" ]]; then
    # Set KIJI_HOME to the release dir.
    export KIJI_HOME="${release}"
  fi
fi

exec "${release}/bin/kiji" "$@"
