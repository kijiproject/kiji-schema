{
  name : "foods",
  description : "Types of food",
  keys_format : {
    encoding : "HASH",
    hash_type : "MD5",
    hash_size : 16
  },
  locality_groups : [ {
    name : "default",
    in_memory : false,
    max_versions : 1,
    ttl_seconds : 2147483647,
    compression_type : "GZ",
    families : [ {
      name : "info",
      description : "simple info fields",
      columns : [ {
        name : "name",
        description : "The name of the food",
        column_schema : {
          type : "INLINE",
          value : '"string"'
        }
      }, {
        name : "color",
        description : "The color of the food",
        column_schema : {
          type : "INLINE",
          value : '"string"'
        }
      }, {
        name : "count",
        description : "The count",
        column_schema : {
          type : "CLASS",
          value : "org.kiji.schema.avro.Node"
        }
      }, {
        name : "peopleWhoLikeIt",
        description : "Names of people who like this food",
        column_schema : {
          type : "INLINE",
          value : "{\"type\": \"array\", \"items\": \"string\"}"
        }
      } ]
    }, {
      name : "priceByCountry",
      description : "The price of the food for the given Country.",
      map_schema : {
        type : "INLINE",
        value : '"double"'
      }
    } ]
  } ],
  version : "layout-1.0"
}
