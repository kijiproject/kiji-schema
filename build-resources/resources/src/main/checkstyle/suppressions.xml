  <!-- Test files don't need package-info.java files. -->
  <suppress checks="JavadocPackage" files="src/test/java/"/>

  <!-- Test files don't need javadoc comments. -->
  <suppress checks="JavadocType" files="src/test/java/"/>
  <suppress checks="JavadocMethod" files="src/test/java/"/>

  <!-- Nested blocks used to structure tests. -->
  <suppress checks="AvoidNestedBlocks" files="src/test/java/"/>

  <!-- Javadoc contains example POM code. -->
  <suppress checks="JavadocStyle" files="src/test/java/org/kiji/schema/cassandra/AbstractCassandraKijiIntegrationTest.java"/>

  <!-- Don't worry about checkstyle on apache foundation code. -->
  <suppress checks=".*" files="src/main/java/org/apache/"/>

  <!-- Don't worry about checkstyle on slf4j code. -->
  <suppress checks=".*" files="src/main/java/org/slf4j/"/>

  <!-- Don't worry about checkstyle on protocol buffer code. -->
  <suppress checks=".*" files="src/test/java/org/kiji/proto/"/>

  <!-- Don't do any checks on the NullOutputStream code -->
  <suppress checks=".*" files="src/main/java/com/google/common/io/"/>
</suppressions>
